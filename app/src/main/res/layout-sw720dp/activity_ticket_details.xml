<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".TicketDetailsActivity">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView"/>
        <TextView
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_below="@id/imageView"
            android:textSize="25px"
            android:id="@+id/starting_date"/>
        <TextView
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_below="@id/starting_date"
            android:textSize="25px"
            android:id="@+id/min"/>
        <TextView
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_below="@id/min"
            android:textSize="25px"
            android:id="@+id/max"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_below="@id/max"
            android:textSize="20px"
            android:id="@+id/URL"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_below="@id/help_button"
            android:id="@+id/favorite_button"
            android:text="@string/save_as_favorite"/>

        <Button
            android:id="@+id/help_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/URL"
            android:layout_gravity="center"
            android:text="@string/tickethelp2" />

    </RelativeLayout>

</LinearLayout>